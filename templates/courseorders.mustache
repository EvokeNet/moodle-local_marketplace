<div class="text-right">
    <a href="{{config.wwwroot}}/local/marketplace/courseproducts.php?id={{courseid}}" class="btn btn-primary">
        {{#str}}courseproducts, local_marketplace{{/str}}
    </a>

    {{#hasorders}}
        <div class="dropdown d-inline">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-cloud-download"></i> {{#str}}downloadordersreport, local_marketplace{{/str}}
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="{{config.wwwroot}}/local/marketplace/courseorders_download.php?id={{courseid}}&format=csv">csv</a>
                <a class="dropdown-item" href="{{config.wwwroot}}/local/marketplace/courseorders_download.php?id={{courseid}}&format=excel">excel</a>
            </div>
        </div>
    {{/hasorders}}
</div>

<h3 class="mb-4">{{#str}}courseorders, local_marketplace{{/str}}</h3>

{{^hasorders}}
    <div class="alert alert-info" role="alert">
        {{#str}}coursenoorders, local_marketplace{{/str}}
    </div>
{{/hasorders}}

<div class="my-2">
    <div class="list-group">
        {{#orders}}
            <div class="list-group-item list-group-item-action flex-column align-items-start">
                <div class="user d-flex">
                    <div class="picture">
                        <img class="userpicture mr-2" src="{{userimage}}" alt="{{fullname}}" width="60px">
                    </div>
                    <div class="info d-flex align-items-center">
                        <div class="content">
                            <h4 class="mb-0"><a href="{{config.wwwroot}}/local/evokegame/profile.php?id={{courseid}}&userid={{userid}}">{{fullname}}</a></h4>
                            <small class="d-block">{{email}}</small>
                            <small class="font-weight-bold">{{usergroups}}</small>
                        </div>
                    </div>
                </div>

                <hr class="my-3">

                <div class="d-flex">
                    <div class="mr-3">
                        <img class="border border-radius p-1" src="{{image.fileurl}}" style="width: 140px;">
                    </div>
                    <div class="content">
                        <h5 class="mb-0">{{name}}</h5>
                        <small>{{humantimecreated}}</small>

                        <p class="mt-2 mb-0">{{description}}</p>
                        <span class="badge badge-warning">{{#str}}price, local_marketplace{{/str}}: {{price}}</span>

                        {{#downloadurl}}
                            <div class="mt-2">
                                <a href="{{downloadurl}}" class="btn btn-primary btn-sm">
                                    <i class="fa fa-download"></i> {{#str}}downloadyourfile, local_marketplace{{/str}}
                                </a>
                            </div>
                        {{/downloadurl}}
                    </div>
                </div>
            </div>
        {{/orders}}
    </div>
</div>